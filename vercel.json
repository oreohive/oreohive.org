{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/node",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/web/$1" }
  ]
}